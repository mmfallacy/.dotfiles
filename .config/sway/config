set $term kitty
set $menu wofi --show drun | xargs swaymsg exec --

output * bg ~/.dotfiles/assets/wallpaper.jpg fill

# Remove titlebars

# Border config <normal|none|pixel>
default_border pixel 3
default_floating_border pixel 3

set $focus_border "#D65F76"
set $inactive_border "#1E2430"

client.focused "#ffffff" $focus_border "#000000" "#ff69b4" 
client.focused_inactive "#ffffff" $inactive_border "#000000" $inactive_border
client.unfocused "#ffffff" $inactive_border "#000000" $inactive_border

# Title bar name alignment (disabled for default workspace layout)

gaps inner 5
gaps outer 5
blur enable
blur_passes 4
blur_radius 7

set $opacity 0.8
for_window [app_id="$term"] opacity $opacity
for_window [app_id=".*"] opacity $opacity
for_window [class=".*"] opacity $opacity

corner_radius 5

include /etc/sway/config.d/*
include ./bar
include ./binds

exec_always kanshi
exec_always autotiling
