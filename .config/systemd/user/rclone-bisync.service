[Unit]
Description=Syncs the local drive copy of `GDrive:UP` to `~/Cloud/UP` via rclone.
After=network.target

[Service]
Type=oneshot
ExecStart=/usr/bin/rclone \
    UPDrive:UP \
    %h/Cloud/UP \
    --drive-skip-gdocs \
    --fast-list \
    --check-access \
    --max-delete 50 \
    --resilient \
    -vv

[Install]
WantedBy=default.target
